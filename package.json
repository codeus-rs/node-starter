{
    "name": "back-starter",
    "version": "1.0.0",
    "description": "Starter pack (boilerplate) for Node.js Typescript projects",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev ./src/index.ts",
        "start": "npm run build && node build/index.js",
        "build": "echo 'Building...' && rm -rf build && tsc && cp .env build/.env && cp -r src/static build/static/",
        "lint": "eslint -c .eslintrc.json . --ext .ts",
        "lint:fix": "eslint -c .eslintrc.json . --ext .ts --fix",
        "prepare": "husky install"
    },
    "dependencies": {
        "axios": "^1.2.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-limiter": "^1.6.1",
        "express-rate-limit": "^6.7.0",
        "helmet": "^6.0.1",
        "joi": "^17.7.0",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.3",
        "pino": "^8.7.0",
        "pino-pretty": "^9.1.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.14",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.11.13",
        "@types/nodemailer": "^6.4.6",
        "@types/pino": "^7.0.5",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.4"
    }
}