{
    "name": "back-starter",
    "version": "1.0.0",
    "description": "Starter pack (boilerplate) for Node.js Typescript projects",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev ./src/index.ts",
        "start": "npm run build && node build/index.js",
        "build": "echo 'Building...' && rm -rf build && tsc && cp .env build/.env && cp -r src/static build/static/",
        "lint": "eslint -c .eslintrc.js --ext .ts"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-limiter": "^1.6.1",
        "express-rate-limit": "^5.5.1",
        "helmet": "^4.6.0",
        "joi": "^17.5.0",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.3",
        "pino": "^7.5.1",
        "pino-pretty": "^7.2.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.11.11",
        "@types/nodemailer": "^6.4.4",
        "@types/pino": "^7.0.5",
        "@types/uuid": "^8.3.3",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "dotenv": "^10.0.0",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.5.0",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.2"
    }
}