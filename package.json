{
    "name": "back-starter",
    "version": "1.0.0",
    "description": "Starter pack (boilerplate) for Node.js Typescript projects",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev ./src/index.ts",
        "start": "npm run build && node build/index.js",
        "build": "echo 'Building...' && rm -rf build && tsc && cp .env build/.env && cp -r src/static build/static/",
        "lint": "eslint -c .eslintrc.js --ext .ts"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "express-limiter": "^1.6.1",
        "express-rate-limit": "^6.6.0",
        "helmet": "^6.0.0",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.3",
        "pino": "^8.5.0",
        "pino-pretty": "^9.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.7.15",
        "@types/nodemailer": "^6.4.5",
        "@types/pino": "^7.0.5",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "dotenv": "^16.0.2",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.2"
    }
}